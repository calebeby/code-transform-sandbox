{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["esnext", "dom"],

    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "esnext",
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "moduleResolution": "node",
    "module": "esnext",
    "noEmitOnError": false
  }
}
